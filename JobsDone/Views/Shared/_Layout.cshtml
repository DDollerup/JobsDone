@{
    User user = Session["User"] as User;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Context/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="~/Context/CSS/main.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="@(user != null ? "/Home/Index" : "/Login/Index")">JobsDone!</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                @if (user != null)
                {
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Index">Home</a>
                        </li>
                    </ul>
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Hello, @user.Firstname!
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="/Home/Profile" class="dropdown-item">Profile</a>
                            @*<button class="dropdown-item" type="button">Profile</button>*@
                            <div class="dropdown-divider"></div>
                            <a href="/Home/SignOut" class="dropdown-item">Sign Out</a>
                            @*<button class="dropdown-item" type="button">Sign out</button>*@
                        </div>
                    </div>
                }
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <div id="modalTarget"></div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/Context/Bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Context/Bootbox/bootbox.min.js"></script>
    @RenderSection("JS", false)
</body>
</html>
