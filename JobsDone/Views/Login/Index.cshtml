@model User
@{
    ViewBag.Title = "Index";
}

@section Head{
    <link href="~/Context/CSS/signin.css" rel="stylesheet" />
}

<form id="signin" action="@Url.Action("Index")" method="post" enctype="multipart/form-data">
    <h2 class="h3">
        Please sign in
    </h2>
    @if (ViewBag.LoginError != null)
    {
        <p class="alert alert-danger">@ViewBag.LoginError</p>
    }
    <label for="Email" class="sr-only">Email</label>
    <input type="email" value="@(Model?.Email)" name="Email" placeholder="Email..." class="form-control" required autofocus />
    <label for="Password" class="sr-only">Password</label>
    <input type="password" name="Password" placeholder="Password..." class="form-control" required />

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>

