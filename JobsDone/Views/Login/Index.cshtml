@model User
@{
    ViewBag.Title = "Index";
}

@section Head{
    <link href="~/Context/CSS/signin.css" rel="stylesheet" />
}

<form id="signin" action="@Url.Action("Index")" method="post" enctype="multipart/form-data">
    <h2 class="h3">
        Please sign in
    </h2>

    <table class="table">
        <tr>
            <td colspan="2">
                <label for="Email" class="sr-only">Email</label>
                <input type="email" value="@(Model?.Email)" name="Email" placeholder="Email..." class="form-control" required autofocus />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label for="Password" class="sr-only">Password</label>
                <input type="password" name="Password" placeholder="Password..." class="form-control" required />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button class="btn btn-primary btn-block" type="submit">Sign in</button>
            </td>
        </tr>
        <tr>
            <td>
                <a href="#" class="btn btn-primary">Want to join?</a>
            </td>
            <td>
                <a href="#" class="btn btn-primary" id="btnCompanyLogin">Company Login</a>
            </td>
        </tr>
    </table>
    @if (ViewBag.LoginError != null)
    {
        <p class="alert alert-danger">@ViewBag.LoginError</p>
    }
</form>
<form id="signinCompany" action="@Url.Action("CompanyLogin", "Login")" method="post" enctype="multipart/form-data" style="display:none;">
    <h2 class="h3">
        Please sign in as Company
    </h2>

    <table class="table">
        <tr>
            <td colspan="2">
                <label for="Email" class="sr-only">Email</label>
                <input type="email" value="@(Model?.Email)" name="Email" placeholder="Email..." class="form-control" required autofocus />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <label for="Password" class="sr-only">Password</label>
                <input type="password" name="Password" placeholder="Password..." class="form-control" required />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button class="btn btn-primary btn-block" type="submit">Sign in</button>
            </td>
        </tr>
        <tr>
            <td>
                <a href="#" class="btn btn-primary">Want to join?</a>
            </td>
            <td>
                <a href="#" class="btn btn-primary" id="btnUserLogin">User Login</a>
            </td>
        </tr>
    </table>
    @if (ViewBag.LoginError != null)
    {
        <p class="alert alert-danger">@ViewBag.LoginError</p>
    }
</form>

@section JS{
    <script>
        var signin = $("#signin");
        var signinCompany = $("#signinCompany");
        $("#btnCompanyLogin").click(function () {
            signinCompany.show();
            signin.hide();
        });

        $("#btnUserLogin").click(function () {
            signinCompany.hide();
            signin.show();
        });
    </script>
}

